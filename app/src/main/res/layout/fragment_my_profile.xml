<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyProfileFragment">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/background_img"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="60dp">

        </RelativeLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/cardLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/headerLayout"
                android:layout_marginTop="-100dp"
                android:background="@drawable/credentials_bg">



            </androidx.appcompat.widget.LinearLayoutCompat>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardBackgroundColor="@color/back_ground"
                            card_view:cardElevation="20dp"
                            android:layout_marginTop="30dp"
                            app:cardUseCompatPadding="true">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="10dp">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="Mariya Doe"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="@color/black"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="PID:362Hb458760"
                                    android:textSize="13sp"
                                    android:textStyle="normal"
                                    android:layout_marginBottom="10dp"
                                    android:gravity="center"
                                    android:textColor="#5C5A5A"/>
                                <View
                                    android:background="#79D6D1D1"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:weightSum="3"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_weight="1"
                                        android:text="Personal Info"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"/>
                                    <View
                                        android:background="#79D6D1D1"
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"/>
                                    <TextView
                                        android:layout_weight="1"
                                        android:text="Family"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="#636262"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"/>
                                    <View
                                        android:background="#79D6D1D1"
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"/>
                                    <TextView
                                        android:layout_weight="1"
                                        android:text="Vitals"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="#636262"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@mipmap/notebooklogo"
                    android:elevation="15dp"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    app:civ_border_color="@color/image_border"
                    app:civ_border_width="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    card_view:civ_circle_background_color="@color/text_hint"/>

            </RelativeLayout>



        </RelativeLayout>





</androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>